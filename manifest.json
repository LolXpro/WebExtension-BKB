{
  "name": "BKB Stundenplan",
  "version": "1.3",
  "manifest_version": 2,

  "developer": {
    "name": "Nicolas Groß"
  },
  "description": "Schnellfenster  für den BKB Stundenplan; Entwickler: Nicolas Groß und Laslo Bertalan",
  "icons": {
    "48": "src/logo48.png",
    "96": "src/logo96.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "BKB Stundeplan"
  },

  "web_accessible_resources": [
    "*.mp3"
  ],

  "permissions": [
    "storage",
    "webRequest"
  ]
}
